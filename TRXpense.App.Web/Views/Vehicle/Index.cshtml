@model IEnumerable<TRXpense.App.Web.ViewModels.VehicleVM>

@{
    ViewBag.Title = "Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Vehicles</h2>
<hr />

<p>
    @Html.ActionLink("Create Vehicle", "Create", "Vehicle", new { @class = "modal-link btn btn-primary" })
</p>

<div class="container">
    <table id="vehicle" class="table table-hover">
        <thead>
            <tr>
                <td><strong>Brand</strong></td>
                <td><strong>Model</strong></td>
                <td><strong>Manufacture Year</strong></td>
                <td><strong>Registration</strong></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr id="row_@vehicle.Id">
                    <td>@vehicle.Brand</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.ProductionYear</td>
                    <td>@vehicle.Registration</td>
                    <td>
                        @Html.ActionLink(" ", "Edit", "Vehicle", new { id = vehicle.Id }, new { @class = "modal-link glyphicon glyphicon-pencil" }) |
                        <a href="#" onclick="ConfirmDelete(@vehicle.Id)"><i class="glyphicon glyphicon-trash"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="deleteConfirmModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 class="modal-title">Delete</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this vehicle? </p>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <a href="#" class="btn btn-danger" onclick="DeleteVehicle()">Confirm</a>
                </div>
            </div>
        </div>
    </div>

    @*hidden field for storing current itemId*@
    <input type="hidden" id="hiddenId" />
</div>

@section scripts
{
    <script>

        var ConfirmDelete = function (id) {

            $("#hiddenId").val(id);
            $("#deleteConfirmModal").modal('show');
        }

        var DeleteVehicle = function () {

            var vehId = $("#hiddenId").val();

            $.ajax({

                type: "POST",
                url: '@Url.Action("Delete")', @* or "/Vehicle/Delete"*@
                data: { id: vehId },
                success: function (result) {
                    // if vehicle is assigned to employee
                    //if (result != true) {
                    //    bootbox.dialog({
                    //        message: "This vehicle is assigned to an employee"
                    //            + "</br>"
                    //            + "You can only delete vehicles that are not assigned to employees.",
                    //        title: "<span style='color:#e20a0a;'><strong> Warning </strong></span> "
                    //            + '<span style="color:#e20a0a;" class="glyphicon glyphicon-warning-sign"></span>',
                    //        buttons: {
                    //            success: {
                    //                label: "Close",
                    //                className: "btn-default",
                    //            },
                    //        }
                    //    });
                    //    $("#deleteConfirmModal").modal("hide");
                    //}
                    // if vehicle is not assinged to employee
                    $("#deleteConfirmModal").modal("hide");
                    $("#row_" + vehId).remove();
                }
            })
        }
    </script>
}
