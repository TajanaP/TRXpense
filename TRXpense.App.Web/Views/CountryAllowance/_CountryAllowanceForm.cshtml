@model TRXpense.App.Web.ViewModels.CountryAllowanceVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Manage Daily Allowances by Country</h4>
</div>

<div class="container-fluid">
    <div class="row">

        @using (Html.BeginForm("Save", "CountryAllowance", FormMethod.Post))
        {
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please fix the following errors.")

                <div class="form-group">
                    @Html.LabelFor(m => m.Country)
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Country)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Amount)
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Amount)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AllowanceCurrency)
                    @Html.TextBoxFor(m => m.AllowanceCurrency, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AllowanceCurrency)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.OfficialCurrency)
                    @Html.TextBoxFor(m => m.OfficialCurrency, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OfficialCurrency)
                </div>
                <div>
                    @Html.HiddenFor(m => m.Id)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" id="approve-btn" class="btn btn-primary">Save</button>
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
