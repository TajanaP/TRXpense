@model TRXpense.App.Web.ViewModels.ExpenseVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Manage Expense</h4>
</div>

<div class="container-fluid">
    <div class="row">

        @using (Html.BeginForm("SaveExpense", "TravelReport", FormMethod.Post))
        {
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please fix the following errors.")

                <div class="form-group">
                    @Html.LabelFor(m => m.Date)
                    @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Date)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BillNumber)
                    @Html.EditorFor(m => m.BillNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.BillNumber)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BillAmount)
                    @Html.EditorFor(m => m.BillAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.BillAmount)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ExpenseCategoryId)
                    @Html.DropDownListFor(m => m.ExpenseCategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ExpenseCategoryId)
                </div>
                <div>
                    @Html.HiddenFor(m => m.Id, new { @class = "form-control", Value = 0 })
                    @Html.HiddenFor(m => m.TravelReportId)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" id="approve-btn" class="btn btn-primary">Save</button>
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}